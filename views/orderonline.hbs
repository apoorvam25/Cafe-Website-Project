<body>
{{>navbar}}

<div class="container-fluid bgimg">
<h1 class="title">ORDER ONLINE</h1>
</div> 

<ul class="list-unstyled">
    {{#each arr}}
  <li class="media inner">
    <img src="{{imgurl}}" height="150" width="150"  class="align-self-center mr-3" alt="...">
    <div class="media-body">
      <h5 class="mt-0 mb-1 heading">{{title}}</h5>
       Rs.{{price}}
       <form method='GET' action='/addtocart/{{id}}'>
        <button class="btn btn-secondary">Add to Cart</button>   
        </form>
    </div>
  </li>
  {{/each}}
</ul>
</body>
