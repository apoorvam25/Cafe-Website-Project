<body>
{{>navbar}}
<div class="container-fluid bgimg ">
<h1 class="title"> RESERVE A TABLE</h1>
</div>
<br>
<br>
<div class="col d-flex justify-content-center"> 
 <div class="card border-dark text-centre " style="width: 35rem;" >
  <div class="card-header">
  <center> Select Date and Time for your Reservation </center>
 </div>
  <div class="card-body">
      <form method="POST" action="/bookatable">
    {{!-- <h5 class="card-title"></h5> --}}
    <br>
   <h5 class="card-title"> Date : <input type="date" name="date" min="2019-11-16" max="2019-11-30"> </h5> 
   <h5 class="card-title"> Time :  <input type="time" name="time" min="10:00" max="23:00"> </h5>
  <h5 class="card-title"> People : <input type="number" name="count" min="1" max="15"> </h5>
  <br>
  <button id='submit-btn btn btn-secondary' style="display: block; margin: 0 auto;" >Confirm Booking</button>
  <br>
     </div>
</form>
